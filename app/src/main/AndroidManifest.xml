<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.LCWprotech.hairgardenapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="sensorPortrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.HairGardenApplication">
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity android:name=".Customer.AboutDeveloper"
            android:screenOrientation="portrait"
            android:parentActivityName=".Login"/>   <!--Actually back to Customer About Fragment-->
        <activity android:name=".Customer.AboutUs"
            android:screenOrientation="portrait"
            android:parentActivityName=".Login"/>   <!--Actually back to Customer About Fragment-->
        <activity
            android:name=".Admin.UpdateDeleteProduct"
            android:screenOrientation="portrait"
            android:parentActivityName=".Login"/>   <!--Actually back to Admin Product Fragment-->
        <activity
            android:name=".Admin.AdminAddProduct"
            android:screenOrientation="portrait"
            android:parentActivityName=".Login"/>   <!--Actually back to Admin Product Fragment-->
        <activity
            android:name=".Customer.PrivacyPolicy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Staff.Staff"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgotPassword"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainMenu"/>   <!--Back to Login-->
        <activity
            android:name=".Customer.Customer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Admin.Admin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Registration"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainMenu"/>   <!--Back to Login-->
        <activity
            android:name=".Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>